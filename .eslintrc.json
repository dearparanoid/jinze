{
    "env": {
        "es6": true,
        "jquery": true,
        "browser": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "impliedStrict": true
        }
    },
    "extends": [
        "airbnb"
    ],
    "rules": {
        "jsx-a11y/href-no-hash": "off",
        "no-console": 0,
        "react/forbid-prop-types": [
            "error",
            {
                "forbid": [
                    "any"
                ]
            }
        ],
        "react/jsx-filename-extension": [
            "warn",
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "arrow-body-style": [
            "error",
            "always"
        ],
        "react/jsx-boolean-value": [
            "warn",
            "always"
        ],
        "class-methods-use-this": "off",
        "max-len": [
            "warn",
            200,
            {
                "ignoreComments": true,
                "ignoreRegExpLiterals": true
            }
        ]
    },
    "settings": {
        "import/resolver": {
            "webpack": "webpack.config.js"
        }
    }
}